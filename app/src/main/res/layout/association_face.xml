<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_right"
    tools:context=".activity.AssociationFaceActivity">
    <TextView
        android:id="@+id/whether_associate_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:maxLines="2"
        android:text="@string/associateface"/>
    <ImageView
        android:id="@+id/anim"
        android:paddingTop="10dp"
        android:src="@drawable/associate"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/whether_associate_face"
        />
    <TextView
        android:id="@+id/sure_association"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whether_associate_face"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="立即关联"
           />
    <TextView
        android:id="@+id/quxiao"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sure_association"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="取消"
        />
</RelativeLayout>